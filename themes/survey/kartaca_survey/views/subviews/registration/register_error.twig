{% if aSurveyInfo.errors is not empty %}
    <div class="modern-register-error-block">
        <div class="modern-register-error-icon">&#10060;</div>
        <div class="modern-register-error-title">{{ gT("Registration error") }}</div>
        <ul class='{{ aSurveyInfo.class.registerul }} modern-register-error-list' {{ aSurveyInfo.attr.registerul }} >
            {% for error in aSurveyInfo.errors  %}
