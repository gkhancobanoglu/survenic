{% if aGroup.showgroupinfo == 'N' or aGroup.showgroupinfo == 'B' %}
    <div class="modern-group-title-wrapper">
        <h2 class="modern-group-title">{{ aGroup.name }}</h2>
    </div>

    <style>
        .modern-group-title-wrapper {
            margin-bottom: 0.6rem;
        }

        .modern-group-title {
            font-size: 1.45rem;
            font-weight: 800;
            color: #1e3a8a;
            background: linear-gradient(90deg, #e0f2fe, #f0f9ff);
            border-radius: 0.75rem;
            padding: 0.7rem 1.2rem;
            display: inline-block;
            box-shadow: 0 4px 10px rgba(37, 99, 235, 0.06);
            max-width: 100%;
            line-height: 1.3;
            letter-spacing: -0.4px;
            font-family: 'Inter', 'Segoe UI', Arial, sans-serif;
        }

        @media (max-width: 700px) {
            .modern-group-title {
                font-size: 1.15rem;
                padding: 0.6rem 0.9rem;
            }
        }
    </style>
{% endif %}
