{#
{% if aSurveyInfo.aNavigator.load.show == "Y" %}
    <button {{ aSurveyInfo.attr.loadbutton }} accesskey="l" class="{{ aSurveyInfo.class.loadbutton }} action--ls-button-submit minimal-save-btn minimal-save-btn-outline">
        {{ gT("Load unfinished survey") }}
    </button>
{% endif %}
{% if aSurveyInfo.aNavigator.save.show == "Y" %}
<button {{ aSurveyInfo.attr.savebutton }} accesskey="s" class='{{ aSurveyInfo.class.savebutton }} action--ls-button-submit minimal-save-btn minimal-save-btn-primary'>
    {{ gT('Resume later') }}
</button>
{% if(aSurveyInfo.saved.text and aSurveyInfo.options.showpopups > 0) %}
    <span class="minimal-save-feedback" id="minimal-save-feedback-btn">
        {{ aSurveyInfo.saved.text }}
    </span>
    <script>
        setTimeout(function(){
            var el = document.getElementById('minimal-save-feedback-btn');
            if(el) el.style.opacity = 0;
        }, 3000);
    </script>
{% endif %}
{% endif %}

<style>
    .minimal-save-btn {
        font-size: 0.98rem;
        font-weight: 500;
        border-radius: 6px;
        padding: 0.38rem 1.05rem;
        border: none;
        background: none;
        box-shadow: none;
        transition: background 0.16s, color 0.16s, border 0.16s;
        outline: none;
        display: inline-block;
        cursor: pointer;
        margin: 0.1rem 0.3rem 0.1rem 0;
        text-decoration: none;
        letter-spacing: 0.01em;
    }
    .minimal-save-btn:focus {
        outline: 2px solid #0d6efd44;
        outline-offset: 2px;
    }
    .minimal-save-btn-primary {
        color: #fff !important;
        background: #2563eb;
    }
    .minimal-save-btn-primary:hover {
        background: #0d6efd;
        color: #fff !important;
    }
    .minimal-save-btn-outline {
        color: #2563eb !important;
        background: #f8fafc;
        border: 1.5px solid #dbeafe;
    }
    .minimal-save-btn-outline:hover {
        background: #e9f5ff;
        color: #0d6efd !important;
        border-color: #b6e0fe;
    }
    .minimal-save-feedback {
        display: inline-block;
        background: #f3fdf7;
        color: #1a6c3a;
        border-radius: 5px;
        font-size: 0.93rem;
        font-weight: 400;
        margin-left: 0.7rem;
        padding: 0.22rem 0.7rem;
        box-shadow: none;
        opacity: 1;
        transition: opacity 0.5s;
        animation: minimalFadeIn 0.4s;
    }
    @keyframes minimalFadeIn {
        from { opacity: 0; transform: translateY(6px); }
        to { opacity: 1; transform: translateY(0); }
    }
    @media (max-width: 600px) {
        .minimal-save-btn {
            font-size: 0.95rem;
            padding: 0.32rem 0.7rem;
            width: 100%;
        }
        .minimal-save-feedback {
            font-size: 0.91rem;
            padding: 0.18rem 0.5rem;
            margin-left: 0.2rem;
        }
    }
</style>
#}
