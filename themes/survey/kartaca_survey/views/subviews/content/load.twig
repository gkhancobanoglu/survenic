
    {# This will display the script and the hidden inputs needed for ExpressionScript Engine #}
    {{ aSurveyInfo.EM.ScriptsAndHiddenInputs }}
    <div class="load-container">
        <div class="load-card">
            <div class="load-header">
                <i class="fa fa-sign-in-alt load-icon"></i>
                <h1 class="load-title">{{ gT('Kaydedilmiş Anketi Yükle') }}</h1>
                <p class="load-desc">Daha önce kaydettiğin anketi buradan yükleyip devam edebilirsin.</p>
            </div>
            <div class="load-step">
                <ol class="load-steps">
                    <li><b>Adım 1:</b> Kaydederken kullandığın isim ve şifreyi gir.</li>
                    <li><b>Adım 2:</b> (Varsa) Güvenlik kodunu gir.</li>
                    <li><b>Adım 3:</b> Yükle butonuna tıkla ve ankete devam et.</li>
                </ol>
            </div>
            <div class="load-messages">
                {% if count(aSurveyInfo.aLoadForm.aErrors) > 0 %}
                    <div class="alert alert-danger load-alert">
                        <ul class="list-unstyled">
                            {% for key,error in aSurveyInfo.aLoadForm.aErrors %}
                                <li>{{ error }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
                <div class="alert alert-info load-info">
                    <p>{{ gT("Kaydedilmiş anketini yüklemek için bilgilerini girmen yeterli.") }}</p>
                </div>
            </div>
            <div class="load-form-area">
                {{
                    C.Html.form(
                        ( aSurveyInfo.surveyUrl ),
                        'post',
                        {
                            'id': 'form-load',
                            'name': 'form-load',
                            'class': 'ls-form',
                        }
                    )
                }}
                    {{ aSurveyInfo.aLoadForm.sHiddenField }}
                    <div class="load-form-fields">
                        <input id="savename" name="savename" class="load-input" type="text" required placeholder="{{ gT('Kaydedilen İsim (zorunlu)') }}" />
                        <input id="savepass" name="savepass" class="load-input" type="password" required placeholder="{{ gT('Şifre (zorunlu)') }}" />
                        {% if aSurveyInfo.aLoadForm.aCaptcha.show %}
                            <div class="load-captcha">
                                <img src="{{ aSurveyInfo.aLoadForm.aCaptcha.sImageUrl }}" class="load-captcha-img" />
                                <input class="load-input" type="text" placeholder="{{ gT('Güvenlik kodu') }}" />
                            </div>
                        {% endif %}
                    </div>
                    <button type="submit" class="load-btn">{{ gT('Şimdi Yükle') }}</button>
                </form>
            </div>
            <div class="load-return">
                <a href="{{ aSurveyInfo.surveyUrl }}" class="load-return-link">{{ gT('Ankete Geri Dön') }}</a>
            </div>
        </div>
    </div>
    <style>
